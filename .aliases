# Time and weather
alias weather="curl -4 http://wttr.in/Iowa-City"
alias moon="curl -4 http://wttr.in/Moon"
alias cal="cal -3"

alias du="du -h"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias jour="vim $HOME/Dropbox/Journal/"
alias py="python3"
alias jl="julia"

alias pl-hs="cd $HOME/Code/Haskell/playground"
alias pl-py="cd $HOME/Code/Python/playground"
alias poly-conf="cd $HOME/.config/polybar"

alias papers="sxiv ~/Pictures/Wallpapers"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
